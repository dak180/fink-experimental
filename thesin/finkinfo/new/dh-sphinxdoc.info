PatchScript: <<
perl -pi -e 's,\/usr\/share,\%p\/share,g' dh-sphinxdoc/dh_sphinxdoc
<<
###
CompileScript: <<
cd dh-sphinxdoc/ && pod2man -c Debhelper -r '' dh_sphinxdoc dh_sphinxdoc.1
<<
###
InstallScript: <<
install -d -m0755 %i/bin
install -m0755 dh-sphinxdoc/dh_sphinxdoc %i/bin

install -d -m0755 %i/lib/perl5/Debian/Debhelper/Sequence
install -m0644 dh-sphinxdoc/sphinxdoc.pm %i/lib/perl5/Debian/Debhelper/Sequence

install -d -m0755 %i/share/man/man1
install -m0644 dh-sphinxdoc/dh_sphinxdoc.1 %i/share/man/man1
<<
