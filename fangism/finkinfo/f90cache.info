PatchScript: <<
	#!/bin/sh -ev
	# patch Makefile to not depend on implicit rules
	file=Makefile.in
	mv $file $file.orig
	{ echo ".SUFFIXES: .c .o"
	echo ".c.o:"
	echo '	$(CC) $(CFLAGS) -o $@ -c $<'
	cat $file.orig
	} > $file
<<
