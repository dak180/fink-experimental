#!/bin/bash -ex

# dh_installdirs
for i in debian/*.dirs; do \
	p=$(basename $i | sed -e 's,\.dirs$,,'); \
	for j in `cat $i`; do \
		mkdir -p debian/$p/$j; \
	done; \
done

# generate the config snippets for various php
# modules from the templates.
cat debian/modulelist debian/extramodulelist | while read package extname dsoname priority extension; do \
	if [ -z "${dsoname}" ]; then dsoname=$package; fi; \
	if [ -z "${priority}" ]; then priority=20; fi; \
	if [ -z "${extension}" ]; then extension=extension; fi; \
	mkdir -p debian/%n-${package}%p/share/%N/$package; \
	sed -e"s|@extname@|${extname}|g; \
	       s/@dsoname@/${dsoname}/g; \
	       s/@extension@/${extension}/g; \
	       s/@priority@/${priority}/g" \
	  < debian/%n-module.ini \
	  > debian/%n-${package}%p/share/%N/$package/${dsoname}.ini; \
	gecho -n "$dsoname " >> debian/%n-$package.modules; \
done

# generate the maintscripts for various php
# modules from the templates.
cat debian/modulelist | while read package extname dsoname priority; do \
	modules=$(cat debian/%n-$package.modules); \
	for script in postinst preinst postrm prerm; do \
		sed -e"s/@package@/${package}/g; \
		       s/@modules@/${modules}/g; \
		        /#EXTRA#/ r debian/%n-${package}.${script}.extra" \
		  < debian/%n-module.${script} \
		| sed -e'/#EXTRA#/ d' \
		  > debian/%n-${package}.${script}; \
	done; \
	cp debian/%n-module.triggers debian/%n-${package}.triggers; \
	rm -f debian/%n-$package.modules; \
done

# likewise, for the different sapi implementations
for tmpl in postrm prerm postinst; do \
	for sapi in cgi cli fpm phpdbg; do \
		sed -e "s/@sapi@/${sapi}/g; \
		        s/@package@/%n-${sapi}/g; \
		         /#EXTRA#/ r debian/%n-${sapi}.${tmpl}.extra" \
		< debian/%n-sapi.${tmpl} \
		| sed -e'/#EXTRA#/ d' \
		> debian/%n-${sapi}.${tmpl}; \
		mkdir -p "%b/debian/%n-${sapi}%p/share/%n/sapi/"; \
		touch "%b/debian/%n-${sapi}%p/share/%n/sapi/$sapi"; \
	done; \
	for sapi in embed; do \
		sed -e "s/@sapi@/${sapi}/g; \
                        s/@package@/lib%n-${sapi}/g; \
                         /#EXTRA#/ r debian/lib%n-${sapi}.${tmpl}.extra" \
		< debian/%n-sapi.${tmpl} \
		| sed -e'/#EXTRA#/ d' \
		> debian/lib%n-${sapi}.${tmpl}; \
		mkdir -p "%b/debian/lib%n-${sapi}%p/share/%n/sapi/"; \
		touch "%b/debian/lib%n-${sapi}%p/share/%n/sapi/$sapi"; \
	done; \
        for sapi in "" "filter"; do \
		sed -e "s/@sapi@/apache2${sapi}/g; \
		        s/@package@/libapache2-mod-%n${sapi}/g; \
		         /#EXTRA#/ r debian/libapache2-mod-%n${sapi}.${tmpl}.extra" \
		< debian/%n-sapi.${tmpl} \
		| sed -e'/#EXTRA#/ d' \
		> debian/libapache2-mod-%n${sapi}.${tmpl}; \
		mkdir -p "%b/debian/libapache2-mod-%n${sapi}%p/share/%n/sapi/"; \
		touch "%b/debian/libapache2-mod-%n${sapi}%p/share/%n/sapi/apache2$sapi"; \
	done; \
done

# Share Docfiles, less dups
cat debian/modulelist | grep -v common | while read package extname dsoname priority; do \
	rm -rf debian/%n-${package}%p/share/doc/%n-$package; \
	mkdir -p debian/%n-${package}%p/share/doc; \
	ln -s %n-common debian/%n-${package}%p/share/doc/%n-$package; \
done

for package in %n php-pear %n-dbg %n-dev %n-cgi %n-cli %n-phpdbg %n-fpm libapache2-mod-%n libapache2-mod-%nfilter lib%n-embed; do \
	rm -rf debian/${package}%p/share/doc/$package; \
	mkdir -p debian/${package}%p/share/doc; \
	ln -s %n-common debian/${package}%p/share/doc/$package; \
done

# some other helpful (for readability at least) shorthand variables
PHPIZE_BUILDDIR=debian/%n-dev%p/lib/%n/build

PCNTL_FUNCTIONS=$(cat %b/ext/pcntl/php_pcntl.h | sed -ne "/^PHP_FUNCTION/ s/PHP_FUNCTION(\(.*\));/\1/;t end;d;:end p" | tr '\n' ',')

#chmod 01733 debian/%n-common%p/var/lib/%n/sessions/

# Mangle apache2filter DSO name before running dh_apache2
