if [ ${MYSQL_PORT} == '' ]; then
	echo "Could not find available port for mysql server";
	exit 1;
fi
MYSQL_SOCKET=${MYSQL_DATA_DIR}/mysql.sock;

TESTFILE=test-results.txt

if [ -f ${TESTFILE} ]; then \
	rm ${TESTFILE}; \
fi

mkdir -p temp_session_store;
# start our own mysql server for the tests
