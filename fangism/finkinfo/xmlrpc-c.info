InstallScript: <<
	#!/bin/sh -ev
	make DESTDIR=%d install
	# shlibs need absolute paths
	pushd %i/lib
	prefix=%p
	for f in libxmlrpc*.*.16.dylib
	do
		install_name_tool -id "$prefix/lib/$f" "$f"
		deplibs=`otool -L $f | sed 1,2d | awk '{print $1;}' | tr '\n' ' '`
		for d in $deplibs
		do
		# prefix absolute paths to lib installation
		case $d in
		/*) ;;
		*) install_name_tool -change "$d" "$prefix/lib/$d" $f ;;
		esac
		done
	done
	popd
<<
