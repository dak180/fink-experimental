PatchScript: <<
sed -e 's,@FINKPREFIX@,%p,g' %{PatchFile} | patch -p1

cp fink/patches/fink_quirks.patch debian/patches/006-debian_quirks.patch
cp fink/patches/session_save_path.patch debian/patches/
cp fink/patches/fpm-config.patch debian/patches/
cp fink/patches/php-5.3.9-mysqlnd.patch debian/patches/
cp fink/patches/php-fpm-listen-on-unix-socket.patch debian/patches/
cp fink/patches/php-5.2.4-embed.patch debian/patches/

QUILT_DIFF_OPTS=-p QUILT_NO_DIFF_TIMESTAMPS=1 dh_quilt_patch

### Fink Specific stuff
patch -p1 < fink/patches/giconv_is_inferior.patch
patch -p1 < fink/patches/dtrace-extern.patch

%{default_script}

# Use libtool
perl -pi -e 's,darwin,narwin,g' sapi/cli/*.m4 sapi/cgi/*.m4 sapi/fpm/*.m4

# we want all var dirs in rules
perl -pi -e 's,\%p\/var,\/var,g' debian/rules
perl -pi -e 's,\/var,\%p\/var,g' debian/rules

# remove debhelpers that we don't use
perl -pi -e 's,dh_systemd_enable,#dh_systemd_enable,g' debian/rules
perl -pi -e 's,dh_installinit,#dh_installinit,g' debian/rules
perl -pi -e 's,dh_systemd_start,#dh_systemd_start,g' debian/rules

# darwin is www not www-data
perl -pi -e 's,www-data,www,g' debian/rules debian/php5-fpm.NEWS

# default_script messes up getconf, force flags anyhow
perl -pi -e 's,shell g.*etconf LFS_CFLAGS,echo -D_LARGEFILE_SOURCE -D_FILE_OFFSET_BITS=64,g' debian/rules

# disable test (let fink run them), disable interbase and pdo-firebird
perl -pi -e 's,hurd-i386,darwin-x86_64 darwin-i386 darwin-powerpc hurd-i386,g' debian/rules

# enable dtrace
perl -pi -e 's,amd66,darwin-x86_64 darwin-i386 darwin-powerpc amd64,g' debian/rules

# Move ACL fix to php5-common.postinst
perl -pi -e 's,chmod 01733,#chmod 01733,g' debian/rules
sed -i -e '10ichmod 01733 %p/var/lib/php5/sessions' debian/php5-common.postinst.extra

# link these ourself since fink locations are different
perl -pi -e 's,ln -sf,#ln -sf,g' debian/rules

## fix for fink db.h location
perl -pi -e 's,include\/db\.h,include\/db5\/db\.h,g' ext/dba/config.m4

## force some libs ot %p
perl -pi -e 's,with-db4,with-db4=%p,g' debian/rules
perl -pi -e 's,with-gettext,with-gettext=%p,g' debian/rules
perl -pi -e 's,with-iconv,with-iconv=%p,g' debian/rules

## vpx isn't shared in fink
perl -pi -e 's;with-vpx-dir=shared,;with-vpx-dir=;g' debian/rules

## no system tzdata on darwin
perl -pi -e 's,with-system-tzdata,without-system-tzdata,g' debian/rules

## disable cli for embed
perl -pi -e 's,--enable-embed --disable-cgi,--enable-embed --disable-cgi --disable-cli,g' debian/rules
sed -i '886,889d' debian/rules

## pgsql is in opt
perl -pi -e 's,\%p\/bin\/pg_config,\%p/opt\/postgresql-9.4,g' debian/rules
perl -pi -e 's,pg_config,\%p/opt\/postgresql-9.4\/bin\/pg_config,g' debian/rules

## fix libphp5 location
perl -pi -e 's,php5\/libphp5.la,libphp5.la,g' debian/rules
perl -pi -e 's,mv \$,#mv \$,g' debian/rules

## Patch debian dir stuff
perl -pi -e 's,\.libs,libs,g' debian/*.apache2 debian/rules
## Fixes for userdirs
cp fink/php5.conf debian/
cp fink/php5-fpm.init debian/

## logger is /usr/bin
perl -pi -e 's,\%p\/bin\/logger,\/usr\/bin\/logger,g' debian/debhelper/php5-maintscript-helper

## kerberos,sendmail is in /usr
perl -pi -e 's,with-kerberos=\%p,with-kerberos=\/usr,g' debian/rules
perl -pi -e 's,\%p/sbin/sendmail,\/usr\/sbin\/sendmail,g' debian/rules

## xpm is /opt/X11
perl -pi -e 's,\%p\/X11R6,\/opt\/X11,g' debian/rules

## fink libtool location
perl -pi -e 's,\%p\/share\/libtool,\%p\/share\/libtool\/build-aux,g' debian/rules

## coreutils
perl -pi -e 's,readlink,greadlink,g' debian/php5query debian/rules
perl -pi -e 's,rmdir,grmdir,g' debian/rules
perl -pi -e 's,grmdir -p,rm -rf,g' debian/rules
perl -pi -e 's,echo -n,gecho -n,g' debian/rules

## don't set owner in build for build-as-nobody
perl -pi -e 's, -o root -g root,,g' debian/rules

## no ldconfig on darwin and packagename differs
perl -pi -e 's,ldconfig,gecho -n,g' debian/libphp5-embed.post* debian/libphp5-embed.pre*
perl -pi -e 's,libphp5-embed,libphp5-embed%type_raw[embedver],g' debian/libphp5-embed.post*

## No builtin json (dfsg)
rm -rf ext/json/*
