  echo "Removing any leftover files from obsolete teTeX installations ..."
  rm -f %p/etc/texmf.local/web2c/*
  rm -f %p/etc/ls-R/texmf.macosx
  rm -Rf %p/share/texmf.macosx
  rm -Rf %p/etc/texmf-var
